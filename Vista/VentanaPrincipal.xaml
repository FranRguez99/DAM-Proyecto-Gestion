<Window x:Class="DDI_GestionEmpresa.Vista.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDI_GestionEmpresa.Vista"
        mc:Ignorable="d"
        Loaded="VentanaPrincipal_Loaded"
        Title="VentanaPrincipal" Height="auto" Width="auto" SizeToContent="WidthAndHeight">
    <Grid Height="auto" Width="auto">
        <TabControl>
            <TabItem Header="Empresas">

                <Grid Height="600" Width="800">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Vista/fondo.jpg"/>
                    </Grid.Background>
                    <DataGrid x:Name="tablaEmpresas" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="75,55,75,125" AutoGenerateColumns="False" SelectionChanged="tablaEmpresas_SelectionChanged" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="CIF" Binding="{Binding cif}" Width="*"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                            <DataGridTextColumn Header="Direccion" Binding="{Binding direccion}" Width="*"/>
                            <DataGridTextColumn Header="Código Postal" Binding="{Binding codPostal}" Width="*"/>
                            <DataGridTextColumn Header="Localidad" Binding="{Binding localidad}" Width="*"/>
                            <DataGridTextColumn Header="Mail" Binding="{Binding mail}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Content="GESTIÓN DE DATOS DE EMPRESAS" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.254,0.508"/>
                    <Button x:Name="btnInsertar" HorizontalAlignment="Left" Margin="75,508,0,0" VerticalAlignment="Top" Height="50" Width="150" FontFamily="Bahnschrift" FontSize="24" Foreground="Black" BorderBrush="#FFB5B5B5" Content="INSERTAR">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFB5B5B5" Offset="1"/>
                                <GradientStop Color="White" Offset="0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="btnModificar" HorizontalAlignment="Center" Margin="0,515,0,0" VerticalAlignment="Top" Height="50" Width="150" FontFamily="Bahnschrift" FontSize="24" Foreground="Black" BorderBrush="#FFB5B5B5" Content="MODIFICAR">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFB5B5B5" Offset="1"/>
                                <GradientStop Color="White" Offset="0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnEliminar" HorizontalAlignment="Left" Margin="575,515,0,0" VerticalAlignment="Top" Height="50" Width="150" FontFamily="Bahnschrift" FontSize="24" Foreground="Black" BorderBrush="#FFB5B5B5" Content="ELIMINAR">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFB5B5B5" Offset="1"/>
                                <GradientStop Color="White" Offset="0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Alumnos">
                <Grid Background="#FFE5E5E5" Height="600" Width="800">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="43*"/>
                        <RowDefinition Height="557*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="383*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid IsReadOnly="True" SelectedCellsChanged="tablaAlumno_SelectedCellsChanged" x:Name="tablaAlumno" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="308,91,63,182" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="GESTOR DE LOS ALUMNOS " HorizontalAlignment="Left" Margin="183,7,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="28" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.541,0.516" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Nombre:" HorizontalAlignment="Left" Margin="18,169,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Cod del Alumno:" HorizontalAlignment="Left" Margin="7,78,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" Grid.Column="1" Grid.Row="1"/>
                    <TextBox x:Name="tfNombreAlumno" HorizontalAlignment="Left" Margin="107,169,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Height="22" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="DNI:" HorizontalAlignment="Left" Margin="22,244,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.613,1.163" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Apellidos:" HorizontalAlignment="Left" Margin="22,325,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.68,2.014" Grid.Column="1" Grid.Row="1"/>
                    <TextBox x:Name="tfDniAlumno" HorizontalAlignment="Left" Margin="107,246,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="94" Height="22" Grid.Column="1" Grid.Row="1"/>
                    <TextBox x:Name="tfApellidosAlumno" HorizontalAlignment="Left" Margin="107,327,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="94" Height="22" RenderTransformOrigin="0.272,2.04" Grid.Column="1" Grid.Row="1"/>
                    <TextBox x:Name="tfCodAlumno" HorizontalAlignment="Left" Margin="143,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="51" Height="22" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Fecha Nac.:" HorizontalAlignment="Left" Margin="22,403,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.68,2.014" Grid.Column="1" Grid.Row="1"/>
                    <DatePicker SelectedDateFormat="Short" x:Name="dpFechaNacAlumno" HorizontalAlignment="Left" Margin="107,403,0,0" VerticalAlignment="Top" Width="149" Grid.Column="1" Grid.Row="1"/>
                    <Button Name="btInsertAlumn" Content="AÑADIR" HorizontalAlignment="Left" Margin="308,449,0,0" VerticalAlignment="Top" Height="41" Width="123" Click="btInsertAlumn_Click" Grid.Column="1" Grid.Row="1"/>
                    <Button Name="btElimAlumn" Content="ELIMINAR" HorizontalAlignment="Left" Margin="580,449,0,0" VerticalAlignment="Top" Height="41" Width="123" Click="btElimAlumn_Click" Grid.Column="1" Grid.Row="1" />
                    <Button Name="btModiAlumn" Content="MODIFICAR" HorizontalAlignment="Left" Margin="444,449,0,0" VerticalAlignment="Top" Height="41" Width="123" Click="btModiAlumn_Click" Grid.Column="1" Grid.Row="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tutores">
                <Grid Background="#FFE5E5E5" Height="600" Width="800">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="36*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="511*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="tablaTutor" IsReadOnly="True" SelectedCellsChanged="tablaTutores_SelectedCellsChanged" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="283,159,63,124" Grid.Column="2"/>
                    <Label Content="GESTOR DE LOS TUTORES" HorizontalAlignment="Left" Margin="144,50,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="28" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.541,0.516" Grid.Column="2" Height="44" Width="334"/>
                    <Label Content="Nombre:" HorizontalAlignment="Left" Margin="2,226,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" Grid.Column="2" Height="27" Width="63"/>
                    <Label Content="Cod del Tutor:" HorizontalAlignment="Left" Margin="3,145,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" Height="27" Width="95" Grid.Column="2"/>
                    <TextBox x:Name="tfNombreTutor" HorizontalAlignment="Left" Margin="91,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22" Grid.Column="2"/>
                    <Label Content="E-Mail:" HorizontalAlignment="Left" Margin="6,304,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.613,1.163" Grid.Column="2" Height="27" Width="54"/>
                    <Label Content="Teléfono:" HorizontalAlignment="Left" Margin="6,388,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.68,2.014" Grid.Column="2" Height="27" Width="65"/>
                    <TextBox x:Name="tfEmailTutor" HorizontalAlignment="Left" Margin="91,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="22" Grid.Column="2"/>
                    <TextBox x:Name="tfTlfTutor" HorizontalAlignment="Left" Margin="91,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="22" RenderTransformOrigin="0.272,2.04" Grid.Column="2"/>
                    <TextBox x:Name="tfCodTutor" HorizontalAlignment="Left" Margin="104,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" Height="22" Grid.Column="2"/>
                    <Button x:Name="btInsertTutores" Content="AÑADIR" HorizontalAlignment="Left" Margin="289,525,0,0" VerticalAlignment="Top" Height="41" Width="123" Click="btInsertTutores_Click" Grid.Column="2"/>
                    <Button x:Name="btElimTutores" Content="ELIMINAR" HorizontalAlignment="Left" Margin="561,525,0,0" VerticalAlignment="Top" Height="41" Width="123" Click="btElimTutores_Click" Grid.Column="2" />
                    <Button x:Name="btModiTutores" Content="MODIFICAR" HorizontalAlignment="Left" Margin="425,525,0,0" VerticalAlignment="Top" Height="41" Width="123" Click="btModiTutores_Click" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Asignación">
                <Grid Background="#FFE5E5E5" Height="500" Width="800">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="28*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="747*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid  d:ItemsSource="{d:SampleData ItemCount=5}" Margin="315,144,37,88" Grid.Column="2" Grid.ColumnSpan="2"/>
                    <Label Content="GESTOR DE LA ASIGNACIÓN DE PLAZAS" HorizontalAlignment="Left" Margin="54,53,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="28" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.541,0.516" Grid.Column="2" Height="44" Width="522" Grid.ColumnSpan="2"/>
                    <Label Content="Empresa Elecc:" HorizontalAlignment="Left" Margin="18,225,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" Grid.Column="2" Height="27" Width="119" Grid.ColumnSpan="2"/>
                    <Label Content="Alumno Elecc:" HorizontalAlignment="Left" Margin="18,162,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" Height="27" Width="95" Grid.Column="2" Grid.ColumnSpan="2"/>
                    <Label Content="Tutor Elecc:" HorizontalAlignment="Left" Margin="18,298,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.613,1.163" Grid.Column="2" Height="27" Width="97" Grid.ColumnSpan="2"/>
                    <Label Content="" HorizontalAlignment="Left" Margin="12,480,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Bahnschrift" RenderTransformOrigin="0.68,2.014" Grid.Column="2" Height="27" Width="65" Grid.ColumnSpan="2"/>
                    <ComboBox Name="cbEleccAlum" Grid.Column="2" HorizontalAlignment="Left" Margin="124,165,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                    <ComboBox Name="cbEleccEmp" Grid.Column="2" HorizontalAlignment="Left" Margin="124,227,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                    <ComboBox Name="cbEleccTutor" Grid.Column="2" HorizontalAlignment="Left" Margin="124,301,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
